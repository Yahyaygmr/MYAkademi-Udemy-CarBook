@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-12">
    <h4 class="card-title">Yazar Listesi</h4>
    <p class="card-subtitle mb-4">
        Blog yazarlarıyla ilgili ekleme, güncelleme, silme ve listeleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.
    </p>
    <div class="table-responsive table-hover">
        <table class="table mb-0">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Resim</th>
                    <th>Yazar Adı</th>
                    <th>Açıklama</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Yazara Ait Bloglar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AuthorId</td>
                        <td><img src="@item.ImageUrl" style="max-width:80px;" /></td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td> <a href="/Admin/Author/RemoveAuthor/@item.AuthorId" class="btn btn-outline-danger">Sil</a></td>
                        <td> <a href="/Admin/Author/UpdateAuthor/@item.AuthorId" class="btn btn-outline-success">Güncelle</a></td>
                        <td> <a href="/Admin/Author/AuthorBlogs/@item.AuthorId" class="btn btn-outline-info">Bloglar</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class=" mt-4">
            <a href="/Admin/Author/CreateAuthor/" class="btn btn-outline-primary ">+ Yeni Yazar Ekle</a>
        </div>
    </div>

</div>

