@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8">
            <h4 class="card-title">Yazar Güncelleme/Düzenleme Formu</h4>
            <p class="card-subtitle mb-4">Yazar bilgileri düzenleme/güncelleme için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Güncelle" butonuna tıklayarak düzenleme/güncelleme işlemini tamamlayabilirsiniz.</p>
            <form method="post">
                <input type="hidden" asp-for="AuthorId"/>
                <div class="form-group">
                    <label>Yazar Adı Soyadı</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Yazar Adı Giriniz..." />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label>Resim Url</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Resim Url Giriniz..." />
                    <span asp-validation-for="ImageUrl"></span>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Yazar İle İlgili Açıklama Giriniz..."></textarea>
                    <span asp-validation-for="Description"></span>
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
            </form>

        </div> <!-- end col -->
        <div class="col-3">
            <img src="@Model.ImageUrl" style="max-width:320px;"/>
        </div>
    </div>
</div>
