@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Hizmet Ekleme Formu</h4>
            <p class="card-subtitle mb-4">Yeni hizmet eklemek için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Kaydet" butonuna tıklayarak yeni hizmet kaydı işlemini tamamlayabilirsiniz.</p>
            <form method="post">

                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Hizmet Başlığı Giriniz..." />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" placeholder="Hizmet Açıklaması Giriniz..." />
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label>İkon Url</label>
                    <input type="text" asp-for="IconUrl" class="form-control" placeholder="Hizmet İkon Urlsi Giriniz..." />
                    <span asp-validation-for="IconUrl"></span>
                </div>
                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
            </form>

        </div> <!-- end col -->
    </div>
</div>
