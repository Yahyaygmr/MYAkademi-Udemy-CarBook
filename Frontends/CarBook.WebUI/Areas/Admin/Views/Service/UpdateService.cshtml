@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8">
            <h4 class="card-title">Hizmet Güncelleme/Düzenleme Formu</h4>
            <p class="card-subtitle mb-4">Hizmet bilgileri düzenleme/güncelleme için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Güncelle" butonuna tıklayarak düzenleme/güncelleme işlemini tamamlayabilirsiniz.</p>
            <form method="post">
                <input type="hidden" asp-for="ServiceId"/>
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Hizmet Başlığı Giriniz..." />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" placeholder="Hizmet Açıklaması Giriniz..." />
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label>İkon Url</label>
                    <input type="text" asp-for="IconUrl" class="form-control" placeholder="Hizmet İkon Urlsi Giriniz..." />
                    <span asp-validation-for="IconUrl"></span>
                </div>
                <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
            </form>
        </div> <!-- end col -->
    </div>
</div>

