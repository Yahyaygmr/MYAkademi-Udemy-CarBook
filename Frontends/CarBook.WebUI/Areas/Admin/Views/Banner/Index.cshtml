
@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-12">
    <h4 class="card-title">Araç Markaları Listesi</h4>
    <p class="card-subtitle mb-4">
        Araç markalarıyla ilgili ekleme, güncelleme, silme ve listeleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.
    </p>
    <div class="table-responsive table-hover">
        <table class="table mb-0">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Video Url</th>
                    <th>Video Açıklama</th>
                    <th>Güncelle</th>
                    <th>Youtube'da Aç</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BannerId</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.VideoUrl</td>
                        <td>@item.VideoDescription</td>
                        <td><a href="/Admin/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info">Güncelle</a></td> 
                        <td><a href="@item.VideoUrl" class="btn btn-outline-success" target="_blank">Video İzle</a></td> 
                    </tr>
                }
            </tbody>
        </table>
        <div class=" mt-4">
@*             <a href="/AdminBrand/CreateBrand/" class="btn btn-outline-primary ">+ Yeni Banner Ekle</a> *@
        </div>
    </div>

</div>