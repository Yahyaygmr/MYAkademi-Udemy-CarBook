@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Sosyal Medya Hesabı Ekleme Formu</h4>
            <p class="card-subtitle mb-4">Yeni sosyal medya hesabı eklemek için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Kaydet" butonuna tıklayarak yeni sosyal medya hesabı kaydı işlemini tamamlayabilirsiniz.</p>
            <form method="post">

                <div class="form-group">
                    <label>Sosyal Medya Adı</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Sosyal Medya Adı Giriniz..." />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label>Url</label>
                    <input type="text" asp-for="Url" class="form-control" placeholder="Sosyal Medya Urlsi Giriniz..." />
                    <span asp-validation-for="Url"></span>
                </div>
                <div class="form-group">
                    <label>İkon Url</label>
                    <input type="text" asp-for="Icon" class="form-control" placeholder="Sosyal Medya İkonu Giriniz..." />
                    <span asp-validation-for="Icon"></span>
                </div>
                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
            </form>
        </div> <!-- end col -->
    </div>
</div>

