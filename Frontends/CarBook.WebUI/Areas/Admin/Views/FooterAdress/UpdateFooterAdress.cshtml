@model UpdateFooterAdressDto
@{
    ViewData["Title"] = "UpdateFooterAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8">
            <h4 class="card-title">Footer Adres Güncelleme/Düzenleme Formu</h4>
            <p class="card-subtitle mb-4">Footer ve İletişim sayfalarında bulunan adres alanını düzenleme/güncelleme için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Güncelle" butonuna tıklayarak düzenleme/güncelleme işlemini tamamlayabilirsiniz.</p>
            <form method="post">
                <input type="hidden" asp-for="FooterAdressId" />
                <div class="form-group">
                    <label>Adres</label>
                    <input type="text" asp-for="Adress" class="form-control" placeholder="Adres Giriniz..." />
                    <span asp-validation-for="Adress"></span>
                </div>
                <div class="form-group">
                    <label>Telefon No</label>
                    <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon No Giriniz..." />
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Mail Adresi Giriniz..." />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Adres İle İlgili Açıklama Giriniz..."></textarea>
                    <span asp-validation-for="Description"></span>
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
            </form>

        </div> <!-- end col -->
    </div>
</div>

