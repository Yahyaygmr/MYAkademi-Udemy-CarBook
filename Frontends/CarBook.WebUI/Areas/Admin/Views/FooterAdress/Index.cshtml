@model List<ResultFooterAdressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-xl-12">
    <h4 class="card-title">Footer Adres</h4>
    <p class="card-subtitle mb-4">
        Footer ve iletişim sayfasında bulunan adres kısmı ile ilgili ekleme, güncelleme, silme ve listeleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.
    </p>
    <div class="table-responsive table-hover">
        <table class="table mb-0">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th>Adres</th>
                    <th>Telefon No</th>
                    <th>Açıklama</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FooterAdressId</td>
                        <td>@item.Email</td>
                        <td>@item.Adress</td>
                        <td>@item.Phone</td>
                        <td>@item.Description</td>
                        <td> <a href="/Admin/FooterAdress/UpdateFooterAdress/@item.FooterAdressId" class="btn btn-outline-info">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>