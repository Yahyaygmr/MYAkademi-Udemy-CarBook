@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-8">
            <h4 class="card-title">Referans Güncelleme/Düzenleme Formu</h4>
            <p class="card-subtitle mb-4">Referans düzenleme/güncelleme için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Güncelle" butonuna tıklayarak düzenleme/güncelleme işlemini tamamlayabilirsiniz.</p>
            <form method="post">
                <input type="hidden" asp-for="testimonialId"/>
                <div class="form-group">
                    <label>Ünvan</label>
                    <input type="text" asp-for="title" class="form-control" placeholder="Ünvan Giriniz..." />
                    <span asp-validation-for="title"></span>
                </div>
                <div class="form-group">
                    <label>Ad Soyad</label>
                    <input type="text" asp-for="name" class="form-control" placeholder="Ad Soyad Giriniz..." />
                    <span asp-validation-for="name"></span>
                </div>
                <div class="form-group">
                    <label>Resim Url</label>
                    <input type="text" asp-for="imageUrl" class="form-control" placeholder="Resim Url Giriniz..." />
                    <span asp-validation-for="imageUrl"></span>
                </div>
                <div class="form-group">
                    <label>Yorum</label>
                    <input type="text" asp-for="comment" class="form-control" placeholder="Yorum Giriniz..." />
                    <span asp-validation-for="comment"></span>
                </div>
                <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
            </form>
        </div>
        <div class="col-3">
            <img src="@Model.imageUrl" style="max-width:320px;" />
        </div>
    </div>
</div>

