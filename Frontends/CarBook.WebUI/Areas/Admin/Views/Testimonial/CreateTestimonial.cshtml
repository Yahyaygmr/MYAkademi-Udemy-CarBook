@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Referans Ekleme Formu</h4>
            <p class="card-subtitle mb-4">Referans eklemek için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Kaydet" butonuna tıklayarak yeni referans kaydı işlemini tamamlayabilirsiniz.</p>
            <form method="post">

                <div class="form-group">
                    <label>Ünvan</label>
                    <input type="text" asp-for="title" class="form-control" placeholder="Ünvan Giriniz..." />
                    <span asp-validation-for="title"></span>
                </div>
                <div class="form-group">
                    <label>Ad Soyad</label>
                    <input type="text" asp-for="name" class="form-control" placeholder="Ad Soyad Giriniz..." />
                    <span asp-validation-for="name"></span>
                </div>
                <div class="form-group">
                    <label>Resim Url</label>
                    <input type="text" asp-for="imageUrl" class="form-control" placeholder="Resim Url Giriniz..." />
                    <span asp-validation-for="imageUrl"></span>
                </div>
                <div class="form-group">
                    <label>Yorum</label>
                    <input type="text" asp-for="comment" class="form-control" placeholder="Yorum Giriniz..." />
                    <span asp-validation-for="comment"></span>
                </div>
                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
            </form>
        </div> <!-- end col -->
    </div>
</div>

