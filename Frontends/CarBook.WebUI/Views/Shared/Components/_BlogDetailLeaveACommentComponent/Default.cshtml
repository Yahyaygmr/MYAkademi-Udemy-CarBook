@model CreateCommentDto

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    <form method="post" asp-action="AddComment" class="p-5 bg-light">
        <input type="hidden" value="@ViewBag.blogId" asp-for="BlogId"/>
        <div class="form-group">
            <label for="name">Adınız  *</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="message">Yorum</label>
            <textarea  cols="20" rows="5" class="form-control" asp-for="Description"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>