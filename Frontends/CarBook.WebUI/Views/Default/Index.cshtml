@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    ViewData["Display"] = "none";
    Layout = "~/Views/UILayout/Index.cshtml";
}

@await Component.InvokeAsync("_DefaultCoverUIComponent")


<section class="ftco-section ftco-no-pt bg-light">

    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12	featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center">
                        <form method="post" class="request-form ftco-animate bg-primary">
                            <h2>Hızlı Kirala</h2>
                            <div class="form-group">
                                <label for="" class="label">Alış Lokasyonu</label>
                                @* @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.locations, new { @class = "form-control"}) *@
                                <select name="locationId" class="form-control">
                                    <option value="" style="color:black;">Seçiniz</option>
                                    @foreach (var item in ViewBag.locations)
                                    {
                                        <option value="@item.Value" style="color:black;">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Alış Tarihi</label>
                                    <input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Date">
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Teslim Tarihi</label>
                                    <input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Date">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Alış Saati</label>
                                <input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Time">
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Teslim Saati</label>
                                <input type="text" class="form-control" name="time_off" id="time_pick" placeholder="Time">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-secondary py-3 px-4">Uygun Araçları Listele</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Araç kiralamada en hızlı ve güzenli yöntem.</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Lokasyon seçimini yap.</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">En iyi teklifi al.</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Aracını seç ve kirala.</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="#" class="btn btn-primary py-3 px-4">Sana En Uygun Olan Aracı Bul</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</section>
