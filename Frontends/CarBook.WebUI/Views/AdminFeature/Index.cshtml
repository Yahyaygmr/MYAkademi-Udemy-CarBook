@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-12">
    <h4 class="card-title">Özellik Listesi</h4>
    <p class="card-subtitle mb-4">
        Araç özellikleri ilgili ekleme, güncelleme, silme ve listeleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.
    </p>
    <div class="table-responsive table-hover">
        <table class="table mb-0">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Özellik</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FeatureId</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/AdminFeature/RemoveFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a>
                            <a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class=" mt-4">
            <a href="/AdminFeature/CreateFeature/" class="btn btn-outline-primary ">+ Yeni Özellik Ekle</a>
        </div>
    </div>

</div>