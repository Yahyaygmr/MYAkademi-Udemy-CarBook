@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Araç Özellik Güncelleme Formu</h4>
            <p class="card-subtitle mb-4">Araçlara ait özellikleri güncellemek/düzenlemek için bu formu kullanabilirsiniz.</p><p> Veri girişi yaptıktan sonra "Güncelle" butonuna tıklayarak özellik güncelleme/düzenleme işlemini tamamlayabilirsiniz.</p>
            <form method="post">
                <input type="hidden" asp-for="FeatureId"/>
                <div class="form-group">
                    <label>Özellik</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Yeni Özellik Giriniz..." />
                    <span asp-validation-for="Name"></span>
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
            </form>

        </div> <!-- end col -->
    </div>
</div>

