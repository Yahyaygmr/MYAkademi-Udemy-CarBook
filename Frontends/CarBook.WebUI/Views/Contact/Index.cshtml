@model CreateContactDto
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            @await Component.InvokeAsync("_FooterAdressComponent")
            <div class="col-md-8 block-9 mb-md-5">
                <form class="bg-light pt-5 px-5 pb-2 contact-form" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Mail" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Konu" asp-for="Subject">
                    </div>
                    <div class="form-group">
                        <textarea  id="" cols="30" rows="3" class="form-control" placeholder="Mesajınız" asp-for="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Mesaj Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
    </div>
</section>
